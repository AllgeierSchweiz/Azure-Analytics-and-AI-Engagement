{
    "name": "2 MarketingDBMigration",
    "properties": {
        "activities": [
            {
                "name": "Move data to ADLS Gen2 Stage",
                "description": "Load Data to Data Lake Gen 2 Stage",
                "type": "Copy",
                "dependsOn": [
                    {
                        "activity": "Check if  Teradata Marketing DB exist",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "7.00:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "source": {
                        "type": "TeradataSource",
                        "partitionOption": "None"
                    },
                    "sink": {
                        "type": "DelimitedTextSink",
                        "storeSettings": {
                            "type": "AzureBlobFSWriteSettings"
                        },
                        "formatSettings": {
                            "type": "DelimitedTextWriteSettings",
                            "quoteAllText": true,
                            "fileExtension": ".txt"
                        }
                    },
                    "enableStaging": false,
                    "translator": {
                        "type": "TabularTranslator",
                        "typeConversion": true,
                        "typeConversionSettings": {
                            "allowDataTruncation": true,
                            "treatBooleanAsNumber": false
                        }
                    }
                },
                "inputs": [
                    {
                        "referenceName": "Teradata_MarketingDB",
                        "type": "DatasetReference"
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "MarketingDB",
                        "type": "DatasetReference"
                    }
                ]
            },
            {
                "name": "Check if  Teradata Marketing DB exist",
                "description": "GetMetadata activity is used to ensure the source dataset is ready for downstream consumption, before triggering the copy and analytics job.",
                "type": "Lookup",
                "dependsOn": [],
                "policy": {
                    "timeout": "7.00:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "source": {
                        "type": "TeradataSource",
                        "partitionOption": "None"
                    },
                    "dataset": {
                        "referenceName": "Teradata_MarketingDB",
                        "type": "DatasetReference"
                    }
                }
            },
            {
                "name": "Prep data In Azure Synapse",
                "description": "Pull the data from SQL Source to the staging area in ADLS Gen 2, then prep data using Databricks. Then load data to Azure Synapse.  ",
                "type": "SynapseNotebook",
                "dependsOn": [
                    {
                        "activity": "Move data to ADLS Gen2 Stage",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "7.00:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "notebook": {
                        "referenceName": "2_Campaign Analytics DataPrep",
                        "type": "NotebookReference"
                    },
                    "snapshot": true
                }
            },
            {
                "name": "Load data to Azure Synapse",
                "type": "Copy",
                "dependsOn": [
                    {
                        "activity": "Prep data In Azure Synapse",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "7.00:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "source": {
                        "type": "DelimitedTextSource",
                        "storeSettings": {
                            "type": "AzureBlobFSReadSettings",
                            "recursive": true,
                            "enablePartitionDiscovery": false
                        },
                        "formatSettings": {
                            "type": "DelimitedTextReadSettings"
                        }
                    },
                    "sink": {
                        "type": "SqlDWSink",
                        "tableOption": "autoCreate",
                        "disableMetricsCollection": false
                    },
                    "enableStaging": false,
                    "translator": {
                        "type": "TabularTranslator",
                        "typeConversion": true,
                        "typeConversionSettings": {
                            "allowDataTruncation": true,
                            "treatBooleanAsNumber": false
                        }
                    }
                },
                "inputs": [
                    {
                        "referenceName": "CampaignData",
                        "type": "DatasetReference"
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "Campaign_Data",
                        "type": "DatasetReference"
                    }
                ]
            }
        ],
        "annotations": [],
        "lastPublishTime": "2022-01-21T17:47:37Z"
    },
    "type": "Microsoft.Synapse/workspaces/pipelines"
}