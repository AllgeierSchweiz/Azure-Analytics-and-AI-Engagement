{
    "name": "RealTimeTwitterData",
    "properties": {
        "linkedServiceName": {
            "referenceName": "synretailprod-WorkspaceDefaultStorage",
            "type": "LinkedServiceReference"
        },
        "annotations": [],
        "type": "Parquet",
        "typeProperties": {
            "location": {
                "type": "AzureBlobFSLocation",
                "folderPath": {
                    "value": "@concat('Data','/',formatDateTime(utcnow(),'yyyy'),'/',formatDateTime(utcnow(),'MM'),'/',formatDateTime(utcnow(),'dd'))",
                    "type": "Expression"
                },
                "fileSystem": "twitterdata"
            },
            "compressionCodec": "snappy"
        },
        "schema": [
            {
                "name": "time",
                "type": "INT96"
            },
            {
                "name": "hashtag",
                "type": "UTF8"
            },
            {
                "name": "tweet",
                "type": "UTF8"
            },
            {
                "name": "city",
                "type": "UTF8"
            },
            {
                "name": "username",
                "type": "UTF8"
            },
            {
                "name": "retweetcount",
                "type": "INT64"
            },
            {
                "name": "favouritecount",
                "type": "INT64"
            },
            {
                "name": "sentiment",
                "type": "UTF8"
            },
            {
                "name": "sentimentscore",
                "type": "INT64"
            },
            {
                "name": "isretweet",
                "type": "INT64"
            },
            {
                "name": "hourofday",
                "type": "UTF8"
            },
            {
                "name": "language",
                "type": "UTF8"
            }
        ]
    },
    "type": "Microsoft.Synapse/workspaces/datasets"
}